<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="client" class="com.yet.spring.core.beans.Client">
        <constructor-arg type="java.lang.String" value="1"/>
        <constructor-arg type="java.lang.String" value="Jhon Smith"/>
    </bean>

    <bean id="ConsoleEventLogger" class="com.yet.spring.core.beans.ConsoleEventLogger"/>
    <bean id="FileEventLogger" class="com.yet.spring.core.beans.FileEventLogger" init-method="init">
        <constructor-arg value="./file.txt"/>
    </bean>
    <bean id="CacheEventLogger" class="com.yet.spring.core.beans.CacheEventLogger"
          init-method="init" destroy-method="destroy">
        <constructor-arg value="5"/>
        <constructor-arg value="./file.txt"/>
    </bean>

    <bean id="event" class="com.yet.spring.core.beans.Event" scope="prototype">
        <constructor-arg>
            <bean class="java.util.Date"/>
        </constructor-arg>
        <constructor-arg>
            <bean id="dateFormat" class="java.text.DateFormat" factory-method="getDateTimeInstance"/>
        </constructor-arg>
    </bean>

    <bean id="app" class="com.yet.spring.core.App" >
        <constructor-arg ref="client"/>
        <constructor-arg ref="FileEventLogger"/>
    </bean>

</beans>